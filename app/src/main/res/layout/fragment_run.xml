<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/run_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<TextView android:id = "@+id/run_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_name"
        style="?android:listSeparatorTextViewStyle"
        android:layout_alignBottom="@+id/run_name_text"
        android:layout_alignParentTop="true"/>

<EditText android:id="@+id/run_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/run_name_hint"
        android:layout_toRightOf="@+id/run_name_label"
        android:layout_toEndOf="@+id/run_name_label"/>

    <!--
<Button android:id="@+id/send_run_report"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/run_ok"
      android:layout_below="@id/run_name_label"
      android:enabled="true"/>
-->

</RelativeLayout>

