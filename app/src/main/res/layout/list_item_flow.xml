<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/flow_icon"
        android:src="@drawable/ic_flow"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/flow_list_item_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Flow path"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/flow_icon"/>

    <TextView
        android:id="@+id/flow_list_item_descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Flow description"
        android:layout_below="@+id/flow_list_item_nameTextView"
        android:layout_toRightOf="@+id/flow_icon"
        />

</RelativeLayout>
